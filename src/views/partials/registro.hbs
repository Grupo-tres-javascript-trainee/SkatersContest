
<div class="container ">
        
           
                <form id="miFormulario" action="/registro" method="POST" enctype="multipart/form-data">
                    <h2 class="text-center mb-4">Registro de Usuario</h2>

                    <div class="mb-3 row">
                        <label for="nombre" class="col-sm-3 col-form-label">Nombre:</label>
                        <div class="col-sm-9">
                            <input type="text" name="nombre" class="form-control" value="Ana" id="nombre" placeholder="Ingrese su nombre" required>
                        </div>
                    </div>
<br>
                    <div class="mb-3 row">
                        <label for="email" class="col-sm-3 col-form-label">Email:</label>
                        <div class="col-sm-9">
                            <input type="email" name="email" class="form-control"  value="example@gmail.com" id="email" placeholder="Ingrese su email" required>
                        </div>
                    </div>
<br>
                    <div class="mb-3 row">
                        <label for="password" class="col-sm-3 col-form-label">Contraseña:</label>
                        <div class="col-sm-9">
                            <input type="password" name="password" class="form-control" value="123" id="password" placeholder="Ingrese su contraseña" required>
                        </div>
                    </div>
<br>
                    <div class="mb-3 row">
                        <label for="confirmarPassword" class="col-sm-3 col-form-label">Repita la contraseña:</label>
                        <div class="col-sm-9">
                            <input type="password" name="confirmarPassword" class="form-control" value="123" id="confirmarPassword" placeholder="Repita su contraseña" required>
                        </div>
                    </div>
<br>
                    <div class="mb-3 row">
                        <label for="aniosExperiencia"  class="col-sm-3 col-form-label">Años de experiencia:</label>
                        <div class="col-sm-9">
                            <input type="text" name="aniosExperiencia" class="form-control" value="2" id="aniosExperiencia" placeholder="Ingrese sus años de experiencia" required>
                        </div>
                    </div>
<br>
                    <div class="mb-3 row">
                        <label for="especialidad" class="col-sm-3 col-form-label">Especialidad:</label>
                        <div class="col-sm-9">
                            <input type="text" name="especialidad" class="form-control" value="especialidad" id="especialidad" placeholder="Ingrese su especialidad" required>
                        </div>
                    </div>
<br>
                    <div class="mb-3 row">
                        <label for="fotoPerfil" class="col-sm-3 col-form-label">Foto de perfil:</label>
                            <input type="file" name="foto" id="fileInput" required />
                    </div>

                    <div class="text-center">
                        <button type="submit" onclick="nuevoSkater2()" class="btn btn-success">Registrar</button>
                    </div>
                    
                </form>
                <script defer src="./js/index.js"></script>
      
        
    </div>

